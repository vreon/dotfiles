[user]
	name = Jesse Dubay
	email = {{ .git.email }}
[url "git@github.com"]
	insteadOf = gh
[color]
	ui = true
[push]
	default = simple
[pretty]
	fancy = "format:%C(yellow)%h%C(reset) %C(cyan)%ad%C(reset) %C(green)%aN%Creset%C(bold red)%d%C(reset) %s"
[commit]
	verbose = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
